{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ng-primitives/ng-primitives": ["packages/ng-primitives/src/index.ts"],
      "@ng-primitives/ng-primitives/accordion": ["packages/ng-primitives/accordion/src/index.ts"],
      "@ng-primitives/ng-primitives/overlay": ["packages/ng-primitives/overlay/src/index.ts"],
      "@ng-primitives/ng-primitives/progress": ["packages/ng-primitives/progress/src/index.ts"],
      "@ng-primitives/ng-primitives/resize": ["packages/ng-primitives/resize/src/index.ts"],
      "@ng-primitives/ng-primitives/roving-focus": [
        "packages/ng-primitives/roving-focus/src/index.ts"
      ],
      "@ng-primitives/ng-primitives/tabs": ["packages/ng-primitives/tabs/src/index.ts"],
      "@ng-primitives/ng-primitives/tooltip": ["packages/ng-primitives/tooltip/src/index.ts"],
      "@ng-primitives/ng-primitives/visually-hidden": [
        "packages/ng-primitives/visually-hidden/src/index.ts"
      ],
      "@ng-primitives/workspace-plugins": ["packages/workspace-plugins/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}

{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ng-primitives/ng-primitives": ["packages/ng-primitives/src/index.ts"],
      "@ng-primitives/ng-primitives/accordion": ["packages/ng-primitives/accordion/src/index.ts"],
      "@ng-primitives/ng-primitives/avatar": ["packages/ng-primitives/avatar/src/index.ts"],
      "@ng-primitives/ng-primitives/checkbox": ["packages/ng-primitives/checkbox/src/index.ts"],
      "@ng-primitives/ng-primitives/overlay": ["packages/ng-primitives/overlay/src/index.ts"],
      "@ng-primitives/ng-primitives/progress": ["packages/ng-primitives/progress/src/index.ts"],
      "@ng-primitives/ng-primitives/radio": ["packages/ng-primitives/radio/src/index.ts"],
      "@ng-primitives/ng-primitives/resize": ["packages/ng-primitives/resize/src/index.ts"],
      "@ng-primitives/ng-primitives/roving-focus": [
        "packages/ng-primitives/roving-focus/src/index.ts"

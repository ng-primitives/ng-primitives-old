{
  "name": "themes",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "prefix": "ngp",
  "sourceRoot": "packages/themes/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "sass packages/themes/src/ngp-theme.scss dist/packages/themes/ngp-theme.css --style=compressed"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "stylelint \"packages/themes/src/**/*.scss\""
      }
    }
  }
}

{
  "name": "ng-primitives",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ng-primitives/src",
  "prefix": "ngp",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/ng-primitives/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/ng-primitives/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/ng-primitives/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/ng-primitives/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/ng-primitives/**/*.ts",
          "packages/ng-primitives/**/*.html",
          "packages/ng-primitives/accordion/**/*.ts",
          "packages/ng-primitives/accordion/**/*.html",
          "packages/ng-primitives/overlay/**/*.ts",
          "packages/ng-primitives/overlay/**/*.html",
          "packages/ng-primitives/progress/**/*.ts",
          "packages/ng-primitives/progress/**/*.html",
          "packages/ng-primitives/resize/**/*.ts",
          "packages/ng-primitives/resize/**/*.html",
          "packages/ng-primitives/roving-focus/**/*.ts",
          "packages/ng-primitives/roving-focus/**/*.html",
          "packages/ng-primitives/tabs/**/*.ts",
          "packages/ng-primitives/tabs/**/*.html",
          "packages/ng-primitives/tooltip/**/*.ts",
          "packages/ng-primitives/tooltip/**/*.html",
          "packages/ng-primitives/visually-hidden/**/*.ts",
          "packages/ng-primitives/visually-hidden/**/*.html"
        ]
      }
    }
  }
}
